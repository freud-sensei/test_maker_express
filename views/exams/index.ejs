<% layout('layouts/boilerplate.ejs') %>
<!-- 선택화면 -->
<h1 class="mb-4">모의고사 선택</h1>

<form
  action="/exams/search"
  method="post"
  class="col-8 offset-2 col-lg-6 offset-lg-3"
>
  <div class="input-group mb-3 col-6">
    <input
      class="form-control"
      type="text"
      name="title"
      id="title"
      placeholder="제목"
    />
    <input
      class="form-control"
      type="text"
      name="createdBy"
      id="createdBy"
      placeholder="만든이"
    />
    <button class="btn btn-primary">검색</button>
  </div>
</form>
<table class="table">
  <tr>
    <th>제목</th>
    <th>문제수</th>
    <th>만든이</th>
  </tr>
  <% for (let exam of exams) { %>
  <tr>
    <td><a href="/exams/<%=exam._id%>"><%=exam.title%></a></td>
    <td><%=exam.questions.length%></td>
    <td><%=exam.createdBy%></td>
  </tr>

  <% } %>
</table>
