<!DOCTYPE html>
<html lang="kr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <title>모의고사 풀기</title>
  </head>
  <body>
    <!-- navbar -->
    <%- include('../partials/navbar') %>

    <!-- 문제풀이 -->
    <div class="container">
      <h1 class="mb-3"><%=exam.title%> 풀기</h1>

      <form id="examForm" method="POST" action="/exams/<%=exam._id%>">
        <div class="btn-group mb-3">
          <a href="/exams" class="btn btn-outline-danger">돌아가기</a
          ><button class="btn btn-outline-primary">제출하기</button>
        </div>
        <% for (const [q_index, question] of exam.questions.entries()) { %>

        <div class="card mb-3">
          <h6 class="card-header"><%=q_index + 1%>. <%=question.question%></h6>

          <div class="card-body">
            <% for (let [opt_index, option] of question.options.entries()) {%>
            <div class="form-check">
              <label class="form-check-label"
                ><input
                  class="form-check-input"
                  type="radio"
                  ,
                  name="<%=question._id%>"
                  ,
                  value="<%=opt_index%>"
                /><%=option%></label
              >
            </div>

            <% } %>
          </div>
        </div>

        <% } %>
      </form>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
